<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ModeActivity">

        <Button
            android:id="@+id/btn_classic"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="312dp"
            android:text="Classique"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.474"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/defi_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="16dp"
            android:text="Multi-joueurs"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_classic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.889" />

        <Button
            android:id="@+id/score_btn"
            android:layout_width="201dp"
            android:layout_height="52dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="45dp"
            android:text="Voir Score"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.719" />

        <TextView
                android:text="Limcoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nb_limcoins"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:text="Limcoins Restant:"
            app:layout_constraintEnd_toStartOf="@+id/nb_limcoins"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/logout"
            android:layout_width="157dp"
            android:layout_height="52dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:text="Se deconnecter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nb_limcoins"
            app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

